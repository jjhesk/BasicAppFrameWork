<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_window"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:background="@color/second_pref_22"
    android:orientation="vertical">

    <com.hkm.slider.Layouts.MaterialRippleLayout
        style="@style/ripple_confi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/c_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_share_24dp"
            android:drawablePadding="15dp"
            android:drawableTint="@color/second_pref_21"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="Share Link"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </com.hkm.slider.Layouts.MaterialRippleLayout>

    <com.hkm.slider.Layouts.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/c_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_openinbox"
            android:drawablePadding="15dp"
            android:drawableTint="@color/second_pref_21"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="Copy Link"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </com.hkm.slider.Layouts.MaterialRippleLayout>

    <com.hkm.slider.Layouts.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/c_validate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_disc_cc"
            android:drawablePadding="15dp"
            android:drawableTint="@color/second_pref_21"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="Fix Issue"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </com.hkm.slider.Layouts.MaterialRippleLayout>

    <com.hkm.slider.Layouts.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_uninstall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_boxup"
            android:drawablePadding="15dp"
            android:drawableTint="@color/second_pref_21"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="Remove"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </com.hkm.slider.Layouts.MaterialRippleLayout>
</LinearLayout>